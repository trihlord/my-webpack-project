{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "es2022",
        "target": "es2017",
        "moduleResolution": "node",
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "index.d.ts"]
}
